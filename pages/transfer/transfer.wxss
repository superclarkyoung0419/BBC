page {
  height: 100%;
}

.transfer {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.transfer-head {
  height: 105rpx;
}

.transfer-info {
  flex: 1;
  position: relative;
  background: #ffffff;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
  padding: 166rpx 100rpx 0 100rpx;
}

.reciever {
  position: absolute;
  width: 160rpx;
  left: 50%;
  top: -80rpx;
  transform: translateX(-50%);
}

.reciever .avatar {
  width: 100%;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.reciever .reciever-name {
  display: block;
  line-height: 1;
  height: 37rpx;
  font-size: 36rpx;
  font-family: Source Han Sans CN Medium, Source Han Sans CN Medium-Medium;
  font-weight: 500;
  text-align: center;
  color: #000000;
}

.bonus-form {}

.bonus-form .form-title,
.bonus-form .remark {
  font-size: 30rpx;
  font-family: Source Han Sans CN Regular, Source Han Sans CN Regular-Regular;
  font-weight: 400;
  color: #222222;
}

.bonus-input {
  position: relative;
}

.bonus-input .input-head {
  font-size: 80rpx;
  font-family: Source Han Sans CN Medium, Source Han Sans CN Medium-Medium;
  font-weight: 500;
  color: #222222;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.bonus-input .bonus-num {
  height: 116rpx;

  border-bottom: 1rpx solid #e1e1e1;
  padding-left: 80rpx;
  margin-bottom: 60rpx;
}

.remark-bonus {
  width: auto;
  height: 212rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  margin-top: 30rpx;
  margin-bottom: 80rpx;
  padding: 24rpx;
}

input::-webkit-input-placeholder,
input:-moz-placeholder,
input::-moz-placeholder,
input :-ms-input-placeholder {
  /* WebKit browsers */
  font-size: 28rpx;
  font-family: Source Han Sans CN Regular, Source Han Sans CN Regular-Regular;
  font-weight: 400;
  color: #999999;
}

.confirm-button {
  width: 360rpx;
  height: 88rpx;
  background: #00c481;
  border-radius: 10rpx;

  font-size: 36rpx;
  font-family: Source Han Sans CN Medium, Source Han Sans CN Medium-Medium;
  font-weight: 500;
  color: #ffffff;
}