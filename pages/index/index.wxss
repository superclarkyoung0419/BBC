/**index.wxss**/

page {
    height: 100%;
}

.top-contrl {
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 160rpx;
    /* background-color: #35BA6E; */
    /* background: url('/images/bkg.png') no-repeat center center; */
    background-size: 100% 100%;
    padding: 0 10%;
    position: fixed;
    top: 0;
    width: 80%;
    z-index: 99;
}

.background {
    width: 100%;
    height: 100%;
    position: absolute;
    background-size: 100% 100%;
    z-index: -1;
}

.top-item {
    width: 120rpx;
    height: 140rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #FFFFFF;
}

.top-item .top-item-img {
    width: 65%;
    height: 100%;
    /* margin-bottom: 20rpx; */
}

.top-item-text {
    display: inline-block;
    margin-top: 20rpx
}

.list {
    /* height: 950rpx; */
    padding-top: 160rpx;
    z-index: 9;
}

.list-contrl {
    overflow: auto;
}

.list-items {
    height: 300rpx;
    border-radius: 15px;
    padding: 20rpx 30rpx;
    margin: 20rpx 40rpx;
    background-color: #fff;
    position: relative;
    box-shadow: 0px 4px 3px rgba(53, 186, 110, 0.2);
    border-top: 1rpx solid rgba(53, 186, 110, 0.3);
}

.integral {
    position: absolute;
    top: 18rpx;
    right: 28rpx;
    color: #35BA6E;
    font-size: large;
    font-weight: 550;
}

.list-item-title {
    font-size: large;
    width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: inline-block;
}

.list-item-content {
    font-size: medium;
    color: #ccc;
    width: 70%;
    display: inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.user-contrl {
    position: absolute;
    height: 80rpx;
    bottom: 20rpx;
    background-color: #fff;
    line-height: 80rpx;
}

.user-img {
    width: 70rpx;
    height: 70rpx;
    display: inline-block;
    margin-right: 30rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.user-name {
    vertical-align: middle;
}

.list-more {
    text-align: center;
    margin: 40rpx;
}

.scrolltext {
    text-align: center;
    color: #ccc;
}

.bottomtext {
    display: block;
    padding-bottom: 200rpx;
}